<script>
    function getCookie(name) {
        const cookies = document.cookie.split(';');

        for (let i = 0; i < cookies.length; i++) {
            const cookie = cookies[i].trim();
            if (cookie.startsWith(name + '=')) {
                return decodeURIComponent(cookie.substring(name.length + 1));
            }
        }
        return null;
    }

    function generateAvatar(text, foregroundColor = "white", backgroundColor = "gray") {
        const canvas = document.createElement("canvas");
        const context = canvas.getContext("2d");

        canvas.width = 200;
        canvas.height = 200;

        context.fillStyle = backgroundColor;
        context.fillRect(0, 0, canvas.width, canvas.height);

        context.font = "bold 100px Assistant";
        context.fillStyle = foregroundColor;
        context.textAlign = "center";
        context.textBaseline = "middle";
        context.fillText(text.toUpperCase(), canvas.width / 2, canvas.height / 2);

        return canvas.toDataURL("image/png");
    }

    function formatDate(dateInput) {
        let date = new Date(dateInput);
        let year = new Intl.DateTimeFormat('en', { year: 'numeric' }).format(date);
        let month = new Intl.DateTimeFormat('en', { month: 'short' }).format(date);
        let day = new Intl.DateTimeFormat('en', { day: '2-digit' }).format(date);
        return `${day}-${month}-${year}`;
    }


    //######################################################################
    //######################################################################
    const adminData = JSON.parse(localStorage.getItem('connect_data'));
    const adminToken = getCookie('connect_token');

    if (adminData) {
        document.getElementById('username').textContent = adminData.nom + ' ' + adminData.prenom;
        document.getElementById("useravatar1").src = generateAvatar(adminData.nom[0] + adminData.prenom[0]);
        document.getElementById("useravatar2").src = generateAvatar(adminData.nom[0] + adminData.prenom[0]);
    }

    document.addEventListener('DOMContentLoaded', function () {
        if (adminData && adminToken) {
            document.getElementById('username').textContent = adminData.nom + ' ' + adminData.prenom;
            document.getElementById("useravatar1").src = generateAvatar(adminData.nom[0] + adminData.prenom[0]);
            document.getElementById("useravatar2").src = generateAvatar(adminData.nom[0] + adminData.prenom[0]);
        } else {
            if (adminToken) {
                fetch('/user/protected', {
                    method: 'GET',
                    headers: { 'Content-Type': 'application/json', 'usr-auth-token': adminToken, },
                })
                    .then((response) => response.json())
                    .then((result) => {
                        localStorage.setItem('connect_data', JSON.stringify(result.data))
                    })
                    .catch(error => {
                        window.location.href = '/';
                    });
            } else {
                window.location.href = '/';
            }
        }
    });

    //######################################################################
    //######################################################################
    function onLogout() {
        window.location.href = "/";
        localStorage.removeItem('connect_data')
        document.cookie = "connect_token" + '=; expires=Thu, 01 Jan 1900 00:00:00 UTC; path=/;';
    }
</script>